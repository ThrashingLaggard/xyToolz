<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	

	  <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SignAssembly>False</SignAssembly>
    <Title>xyToolZ</Title>
    <Company></Company>
    <Authors>Hansi Bremstein</Authors>
    <Description>Little toolz to save some precious seconds with my doggo.

-PDF:
  -create
  -convert
  -combine
  

-Files</Description>
    <Copyright>Do with this, as you please. Go home to your dog   </Copyright>
    <PackageTags>tools,pdf,qol,files,small,stuff,logs</PackageTags>
    <PackAsTool>True</PackAsTool>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

	<PropertyGroup>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<PropertyGroup>
		<AndroidResgenNoResources>true</AndroidResgenNoResources>
	</PropertyGroup>


	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>False</Optimize>
    <Deterministic>False</Deterministic>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>False</Optimize>
    <Deterministic>False</Deterministic>
  </PropertyGroup>

	<PropertyGroup>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net8.0-android</TargetFrameworks>
	</PropertyGroup>
	
	<ItemGroup>
    <PackageReference Include="PDFsharp" Version="6.1.1" />
    <PackageReference Include="Plugin.Permissions" Version="6.0.1" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.8" />
    <PackageReference Include="System.IO.FileSystem" Version="4.3.0" />
    <PackageReference Include="System.Text.Json" Version="9.0.2" />
  </ItemGroup>


	<Target Name="CopyDllToRidFolder" AfterTargets="Build" Condition="'$(TargetFramework)'=='net8.0-android'">
		<MakeDir Directories="$(OutputPath)android-x64" Condition="!Exists('$(OutputPath)android-x64')" />
		<Copy SourceFiles="$(OutputPath)xyToolz.dll" DestinationFolder="$(OutputPath)android-x64" SkipUnchangedFiles="true" />
	</Target>

</Project>
